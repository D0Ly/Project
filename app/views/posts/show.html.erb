<div class="post">
	<h1><%= @post.title %></h1>
		<%= image_tag @post.image.url(:large), class: 'image-show' if @post.image? %>
		<p><%= @post.text.html_safe %></p>

		<div class="date">
			<p>Дата публикации: <time><%= @post.created_at.to_date %></time></p>
		</div>
		<p><%= link_to 'Назад', posts_path, class: "linkPost"  %></p>
</div>